<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E2"
    tools:context=".ChangePassword">

    <ImageView
        android:id="@+id/logoHarmoney2"
        android:layout_width="310dp"
        android:layout_height="155dp"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/harmoneylogo" />

    <EditText
        android:id="@+id/password_login3"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="neues Passwort"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mail"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/password_login2"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="372dp"
        android:ems="10"
        android:hint="altes Passwort"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mail"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_login2"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginBottom="236dp"
        android:text="Passwort Ã¤ndern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_login"
        app:layout_constraintVertical_bias="0.616" />

    <Button
        android:id="@+id/button_back_change_password"
        android:layout_width="106dp"
        android:layout_height="51dp"
        android:layout_marginEnd="4dp"
        android:autoLink="phone"

        android:backgroundTint="#E7E5DF"
        android:text="Back"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>